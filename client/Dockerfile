FROM node:20 AS build  # veya node:18 ile devam edeceksen npm upgrade sat覺r覺n覺 kald覺r

WORKDIR /app

COPY package*.json ./

RUN npm install --legacy-peer-deps

COPY . .

RUN npm run build

FROM nginx:alpine

COPY --from=build /app/build /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
